{
  "name": "sqlfmt",
  "displayName": "sqlfmt",
  "description": "Format SQL",
  "publisher": "GrantFBarnes",
  "license": "GPL-3.0-only",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/GrantFBarnes/sqlfmt.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "sqlfmt.sqlfmt",
        "title": "sqlfmt - Format SQL"
      }
    ],
    "configuration": {
      "title": "sqlfmt",
      "type": "object",
      "properties": {
        "sqlfmt.replaceNewlines": {
          "type": "boolean",
          "default": false,
          "description": "Replace newlines"
        },
        "sqlfmt.changeKeywordCase": {
          "type": "string",
          "enum": [
            "none",
            "uppercase",
            "lowercase"
          ],
          "enumItemLabels": [
            "None",
            "Uppercase",
            "Lowercase"
          ],
          "markdownEnumDescriptions": [
            "Do not change case on keywords",
            "Uppercase keywords when formatting",
            "Lowercase keywords when formatting"
          ],
          "default": "none",
          "description": "Change case on keywords"
        },
        "sqlfmt.setSpaceCount": {
          "type": "number",
          "default": 4,
          "minimum": 0,
          "maximum": 255,
          "description": "Set amont of spaces for each level of indent"
        },
        "sqlfmt.useTabs": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.99.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
